// carpalx layouts
// see http://mkweb.bcgsc.ca/carpalx/

// xkb keymap prepared by sven moritz hallberg <pesco@khjk.org>
// see http://www.khjk.org/log/2011/jan/carpalx.html
// copyright 2011, isc license


// to use, copy to /usr/share/X11/xkb/symbols/carpalx and add the following
// lines to /usr/share/X11/xkb/symbols.dir:
//
//     -dp----- a------- carpalx(qgmlwy)
//
// then load with, e.g.
//
//     setxkbmap carpalx                            # defaults to QGMLWY

default
partial alphanumeric_keys
xkb_symbols "basic" {

    include "latin"
    include "latin(nodeadkeys)"

    name[Group1] = "QGMLWY - full optimization, QWERTY lettermask";

    key <AE01>	{ [         1,          1,          onesuperior,            onesuperior ]           };
    key <AE02>	{ [         2,          2,          twosuperior,            twosuperior ]           };
    key <AE03>	{ [         3,          3,          threesuperior,          threesuperior ]         };
    key <AE04>	{ [         4,          4,          4,                      4 ]                     };
    key <AE05>	{ [         5,          5,          5,                      5 ]                     };
    key <AE06>	{ [         6,          6,          6,                      6 ]                     };
    key <AE07>	{ [         7,          7,          7,                      7 ]                     };
    key <AE08>	{ [         8,          8,          8,                      8 ]                     };
    key <AE09>	{ [         9,          9,          9,                      9 ]                     };
    key <AE10>	{ [         0,          0,          0,                      0 ]                     };
    key <AE11>	{ [         minus,      underscore, endash,                 emdash ]                };
    key <AE12>	{ [         equal,      plus,       equal,                  plus ]                  };

    key <TLDE>	{ [         dead_acute, dead_tilde, asciicircum,            asciicircum ]           };
    key <AD01>	{ [         q,          Q,          trademark,              plusminus ]             };
    key <AC05>	{ [         g,          G,          gbreve,                 Gbreve ]                };
    key <AB07>	{ [         m,          M,          degree,                 degree ]                };
    key <AC09>	{ [         l,          L,          leftsinglequotemark,    leftdoublequotemark ]	};
    key <AD02>	{ [         w,          W,          rightsinglequotemark,   rightdoublequotemark ]	};
    key <AD06>	{ [         y,          Y,          y,                      Y ]                     };
    key <AC04>	{ [         f,          F,          braceleft,              braceright ]            };
    key <AD07>	{ [         u,          U,          udiaeresis,             Udiaeresis ]            };
    key <AB05>	{ [         b,          B,          bracketleft,            bracketright ]          };
    key <AD10>	{ [         semicolon,  colon,      semicolon,              colon ]                 };

    key <AC03>	{ [         d,          D,          exclam,                 backslash ]             };
    key <AC02>	{ [         s,          S,          ssharp,                 ssharp ]                };
    key <AD05>	{ [         t,          T,          ampersand,              dollar  ]               };
    key <AB06>	{ [         n,          N,          at,                     U0023   ]               };
    key <AD04>	{ [         r,          R,          percent,                asterisk ]              };
